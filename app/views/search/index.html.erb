<h1>Select stations</h1>
<div class="row">
  <%= form_tag search_path(1), method: :get do %>
      <div class="col-md-4">
        <%= collection_select(:station_first, :id, RailwayStation.all, :id, :title, {}, {class:'form-control'}) %>
      </div>
      <div class="col-md-4">
        <%= collection_select(:station_last, :id, RailwayStation.all, :id, :title, {}, {class:'form-control'}) %>
      </div>
      <div class="col-md-4">
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            Search <i class="icon-repeat"></i>
        <% end %>
      </div>
  <% end %>
</div>
