<%= form_with(model: [:admin,ticket], local: true) do |form| %>
    <% if ticket.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('common.errors')%> </h2>
          <ul>
            <% ticket.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= form.label :user %>
      <%= form.collection_select(:user_id, User.all, :id, :name) %>
    </div>

    <div class="field">
      <%= form.label :train %>
      <%= form.collection_select(:train_id, Train.all, :id, :number) %>
    </div>

    <div class="field">
      <%= form.label :start_station %>
      <%= form.collection_select(:start_station_id, RailwayStation.all, :id, :title) %>
    </div>

    <div class="field">
      <%= form.label :end_station %>
      <%= form.collection_select(:end_station_id, RailwayStation.all, :id, :title) %>
    </div>

    <div class="actions">
      <%= form.submit t('.submit', action: @ticket.new_record? ? 'Создать' : 'Изменить')%>
    </div>
<% end %>