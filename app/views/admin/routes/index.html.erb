<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
  <tr>
    <th>Titles:</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td><%= link_to 'Show', admin_route_path(route) %></td>
        <td><%= link_to 'Edit', edit_admin_route_path(route) %></td>
        <td><%= link_to 'Destroy', admin_route_path(route), method: :delete, data: {confirm: 'Вы уверены?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

