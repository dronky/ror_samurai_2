<%= form_for [:admin, @railway_station] do |form| %>
    <% if @railway_station.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('common.errors')%></h2>

          <ul>
            <% @railway_station.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= form.label :title %>
    <%= form.text_field :title%>
    <%= form.submit t('.submit', action: @railway_station.new_record? ? 'Создать' : 'Изменить')%>
<% end %>
