<%= form_for [:admin, wagon.becomes(Wagon)] do |form| %>

    <% if @wagon.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('common.errors') %> </h2>

          <ul>
            <% @wagon.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field type">
      <%= form.label :type %>
      <%= form.select :type, Wagon::WAGON_TYPES, {:include_blank => 'Choose type of wagon'} %>
    </div>

    <div class="field up_seats" style="display: none">
      <%= form.label :up_seats %>
      <%= form.number_field :up_seats %>
    </div>

    <div class="field down_seats" style="display: none;">
      <%= form.label :down_seats %>
      <%= form.number_field :down_seats %>
    </div>

    <div class="field side_up_seats" style="display: none;">
      <%= form.label :side_up_seats %>
      <%= form.number_field :side_up_seats %>
    </div>

    <div class="field side_down_seats" style="display: none;">
      <%= form.label :side_down_seats %>
      <%= form.number_field :side_down_seats %>
    </div>

    <div class="field sit_seats" style="display: none;">
      <%= form.label :sit_seats %>
      <%= form.number_field :sit_seats %>
    </div>

    <div class="actions">
      <%= form.submit t('.submit', action: wagon.new_record? ? 'Создать' : 'Изменить') %>
    </div>
<% end %>
